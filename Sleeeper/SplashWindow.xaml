<Window x:Class="Sleeper.SplashWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SplashWindow" Height="450" Width="800"
        WindowStyle="None" 
        ResizeMode="NoResize" 
        WindowStartupLocation="CenterScreen"
        Background="Transparent" 
        AllowsTransparency="True">

    <Grid>
        <MediaElement x:Name="IntroVideo" 
              Source="Assets/intro.mp4" 
              LoadedBehavior="Play" 
              UnloadedBehavior="Close"
              MediaEnded="IntroVideo_MediaEnded"
              MediaFailed="IntroVideo_MediaFailed" 
              Stretch="UniformToFill"/>
    </Grid>
</Window>
    